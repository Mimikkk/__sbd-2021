{
  "include": [
    "configs",
    "src",
  ],
  "compilerOptions": {
    "baseUrl": "src/frontend",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@internal/*": [
        "../internal/*"
      ],
      "@models/*": [
        "../internal/models/*"
      ],
      "@models": [
        "../internal/models"
      ],
      "@services": [
        "../backend/services"
      ],
      "$/*": [
        "../backend/*"
      ],
      "$sql/*": [
        "../backend/database/*"
      ],
      "$sql": [
        "../backend/database"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ]
}
